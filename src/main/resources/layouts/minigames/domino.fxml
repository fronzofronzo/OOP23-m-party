<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="700.0" minWidth="1000.0" xmlns="http://javafx.com/javafx/15" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unibo.mparty.view.minigames.domino.impl.DominoViewImpl">
   <top>
      <VBox prefHeight="213.0" prefWidth="1020.0" BorderPane.alignment="CENTER">
            <Label fx:id="messageLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Messaggio">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <HBox fx:id="player2Tiles" alignment="CENTER" prefHeight="180.0" prefWidth="1020.0">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </HBox>
            <Label fx:id="player2Label" maxHeight="1.7976931348623157E308" text="Player 2">
               <font>
                  <Font name="Arial Black" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
            </Label>
      </VBox>
   </top>
   <right>
      <VBox fx:id="buttonBox" alignment="CENTER" prefHeight="400.0" prefWidth="148.0" spacing="30.0" BorderPane.alignment="CENTER">
         <Label fx:id="deckSize" alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" text="Mazzo">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
            <Button fx:id="drawButton" mnemonicParsing="false" onMouseClicked="#drawButtonClicked" text="Pesca Tessera">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="playButton" mnemonicParsing="false" onMouseClicked="#playButtonClicked" text="Gioca Tessera">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         <Button fx:id="tutorialButton" mnemonicParsing="false" onMouseClicked="#tutorialClicked" prefWidth="135.0" text="Tutorial">
            <font>
               <Font size="18.0" />
            </font>
         </Button>
         <BorderPane.margin>
            <Insets left="20.0" right="20.0" />
         </BorderPane.margin>
      </VBox>
   </right>
   <bottom>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <Label fx:id="player1Label" maxHeight="1.7976931348623157E308" text="Player 1">
               <font>
                  <Font name="Arial Black" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
            </Label>
            <HBox fx:id="player1Tiles" alignment="CENTER" prefHeight="180.0" prefWidth="1020.0">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" />
               </VBox.margin>
            </HBox>
      </VBox>
   </bottom>
   <center>
      <ScrollPane fx:id="scrollPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </ScrollPane>
   </center>
   <left>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="191.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="20.0" right="20.0"/>
         </BorderPane.margin>
         <Label fx:id="tutorialText" alignment="TOP_LEFT" maxHeight="1.7976931348623157E308"
                maxWidth="1.7976931348623157E308" text="Tutorial" visible="false">
            <VBox.margin>
               <Insets bottom="10.0" top="10.0"/>
            </VBox.margin>
            <font>
               <Font name="System Italic" size="12.0"/>
            </font>
         </Label>
      </VBox>
   </left>
</BorderPane>
